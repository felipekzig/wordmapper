<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    
    <EditText 
    	android:id="@+id/txtWord2Map" 
    	android:text="@string/lblDefineWord"
    	android:textColor="@color/editUnFocused"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentTop="true"
    	android:layout_alignParentLeft="true"  
    	android:layout_alignParentRight="true"
		android:layout_marginTop="7dp">
    </EditText>
    
   
    <LinearLayout 
    	android:id="@+id/linearLayout"
		android:orientation="horizontal" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/txtWord2Map"
		android:layout_alignParentLeft="true" 
		android:layout_alignParentRight="true">
    
    	<Button 
    		android:id="@+id/btnMapWord"
    		android:text="@string/lblMapAction"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1">
    	</Button>
    	
    	<Button 
    		android:id="@+id/btnCancelAction"
    		android:text="@string/lblCancelAction"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="1">
    	</Button>
    
    </LinearLayout>    
</RelativeLayout>
