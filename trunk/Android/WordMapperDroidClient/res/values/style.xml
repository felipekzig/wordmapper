    	<item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:shadowColor">#DD0</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    
	<style name="relatedWord_img" parent="@android:style/Widget.ImageWell">
    	<item name="android:layout_width">12px</item>
        <item name="android:layout_height">12px</item>
        <item name="android:src">@drawable/img_mapper</item>
    </style>
    
    <color name="editFocused">#000</color>
    <color name="editUnFocused">#BBB</color>
        
</resources>
